// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  user_id       Int        @id @default(autoincrement())
  last_name     String? 
  first_name    String? 
  phone_number  String? 
  email         String?   @unique
  home_address  String? 
  password      String?
  tickets       Tickets[]
  wallet        Wallet?
  orders        Orders[]

  @@map("users") // Explicitly map to the lowercase 'users' table
}

model Tickets {
  ticket_id       Int        @id @default(autoincrement())
  ticket_type     String?
  ticket_category String?
  description     String?
  date            DateTime?
  ticket_price    Decimal?
  ticket_image    String?
  ticket_status   String?

  user_id         Int?
  user            Users?     @relation(fields: [user_id], references: [user_id])

  orders          Orders[]

  @@map("tickets") // Explicitly map to the lowercase 'tickets' table
}

model Wallet {
  user_id        Int        @id
  recharged_date DateTime?
  wallet_balance Decimal?

  user           Users      @relation(fields: [user_id], references: [user_id])

  @@map("wallet") // Explicitly map to the lowercase 'wallet' table
}

model Orders {
  ticket_id     Int
  user_id       Int
  ordered_date  DateTime?

  user          Users      @relation(fields: [user_id], references: [user_id])
  ticket        Tickets    @relation(fields: [ticket_id], references: [ticket_id])

  @@id([ticket_id, user_id])
  @@map("orders") // Explicitly map to the lowercase 'orders' table
}
